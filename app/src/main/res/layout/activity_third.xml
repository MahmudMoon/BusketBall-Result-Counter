<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.moonc.courtcount.Third">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"

                />

            <TextView
                android:id="@+id/TeamOne"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#ff9800"
                android:inputType="number"
                android:textSize="40dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#ff9800"
                android:text="+3 Points"
                android:textAppearance="?android:textAppearanceLarge"
                android:onClick="TeamOneFst"/>

            <Button
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ff9800"
                android:text="+2 Points"
                android:textAppearance="?android:textAppearanceLarge"
                android:onClick="TeamOneSec"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ff9800"
                android:text="Free Throw"
                android:textAppearance="?android:textAppearanceLarge"
                android:onClick="TeamOneThd"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TeamTwo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#ff9800"
                android:inputType="number"
                android:textSize="40dp"
                android:gravity="center"/>

            <Button
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#ff9800"
                android:text="+3 Points"
                android:textAppearance="?android:textAppearanceLarge"
                android:onClick="TeamTwoFst"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ff9800"
                android:text="+2 Points"
                android:textAppearance="?android:textAppearanceLarge"
                android:onClick="TeamTwoSec"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ff9800"
                android:text="Free Throw"
                android:textAppearance="?android:textAppearanceLarge"
                android:onClick="TeamTwoThd"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#ff9800"
            android:backgroundTint="#ff9800"
            android:elevation="0dp"
            android:text="Reset"
            android:textAppearance="?android:textAppearanceLarge"
            android:onClick="Reset"/>
    </LinearLayout>

</LinearLayout>
